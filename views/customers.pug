doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Food Delivery App
        style.
            body{font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif}
            h3 { color: #640000 }
    body 
        h1 Bu sayfada sisteme kayitli tum musterileri listeleyebilirsiniz 

        h3 Su anda Customers sayfasindasiniz
 
        h2 Sisteme kayitli toplam #{customers.length} musteri bulunmaktadir. 
 
        ol 
            each customer in customers
                li=customer.name
                    h3 Siparis Gecmisi
                    if customer.orders.length
                        ol
                            each order in customer.orders 
                                li #{order.restaurant.name} adli restoranttan #{order.meal} siparisi verildi
                    else 
                        p Siparis bulunamadi